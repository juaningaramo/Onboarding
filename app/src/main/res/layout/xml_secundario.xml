<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_titulo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Upcoming meetups"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@id/b_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:icon="@drawable/icon1"
        app:iconGravity="textTop"
        app:iconSize="22dp"
        android:backgroundTint="@color/verde"
        app:layout_constraintEnd_toStartOf="@id/b_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo2" />

    <Button
        android:id="@+id/b_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/icon2"
        app:iconGravity="textTop"
        app:iconSize="22dp"
        android:backgroundTint="@color/verde"
        app:layout_constraintEnd_toStartOf="@id/b_3"
        app:layout_constraintStart_toEndOf="@id/b_1"
        app:layout_constraintTop_toTopOf="@id/b_1" />

    <Button
        android:id="@+id/b_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/icon3"
        app:iconGravity="textTop"
        app:iconSize="22dp"
        android:backgroundTint="@color/verde"
        app:layout_constraintEnd_toStartOf="@id/b_4"
        app:layout_constraintStart_toEndOf="@id/b_2"
        app:layout_constraintTop_toTopOf="@id/b_1" />

    <Button
        android:id="@+id/b_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/icon4"
        app:iconGravity="textTop"
        app:iconSize="22dp"
        android:backgroundTint="@color/verde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/b_3"
        app:layout_constraintTop_toTopOf="@id/b_1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_1"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/b_1">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:layout_marginVertical="5dp"
            android:src="@drawable/ib_1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView4"
            android:text="USA, Los Angeles - 2 weeks"
            android:layout_gravity="bottom"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="35dp"
        app:layout_constraintTop_toBottomOf="@id/cv_1">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:layout_gravity="top"
            android:layout_marginVertical="5dp"
            android:src="@drawable/ib_2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView5"
            android:text="Maldives - 3 weeks"
            android:layout_gravity="bottom"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </androidx.cardview.widget.CardView>

    />
</androidx.constraintlayout.widget.ConstraintLayout>